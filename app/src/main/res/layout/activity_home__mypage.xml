<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Mypage"
    android:orientation="vertical"
    android:padding="16dp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="220dp"
       android:id="@+id/Rela">
       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/mypage_profile"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:src="@drawable/profilenull"
           android:layout_centerInParent="true"
           />
       <TextView
           android:id="@+id/mypage_nickname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="test"
           android:textSize="20sp"
           android:layout_centerHorizontal="true"
           android:paddingTop="160dp"
           />
       <TextView
           android:background="@color/white"
           android:id="@+id/mypage_logout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="LOGOUT"
           android:layout_alignParentRight="true"
           android:layout_alignParentBottom="true"
           android:layout_marginRight="50dp"
           android:layout_below="@id/mypage_nickname"
           android:textSize="20dp"
           android:onClick="mypage_logout"/>

   </RelativeLayout>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/mypage_favorlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="찜한목록"
        android:backgroundTint="#D3D3D3"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="#323131"
        />

    <Button
        android:id="@+id/mypage_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="환경설정"
        android:backgroundTint="#D3D3D3"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="#323131"/>
    <Button
        android:id="@+id/mypage_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="고객센터"
        android:backgroundTint="#D3D3D3"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="#323131"/>

    <Button
        android:id="@+id/mypage_madeid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계정관리"
        android:backgroundTint="#D3D3D3"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="#323131" />

</LinearLayout>