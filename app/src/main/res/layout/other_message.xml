<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/other_circlemessasge"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/other_tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="#FF333333"
        android:layout_toRightOf="@+id/other_circlemessasge"
        />
    <TextView
        android:id="@+id/other_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello andorid"
        android:layout_toRightOf="@+id/other_circlemessasge"
        android:layout_below="@+id/other_tvname"
        android:layout_marginLeft="16dp"
        android:background="@drawable/bg_othermsgbox"
        android:padding="12dp"
        android:textColor="#FF333333"
        android:maxWidth="250dp"/>
    <TextView
        android:id="@+id/other_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:50"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/other_msg"
        android:layout_alignBottom="@+id/other_msg"
        android:layout_marginLeft="8dp"
        />

</RelativeLayout>